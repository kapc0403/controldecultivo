<html>
    
    
    
    <style>
       
       body{

        background-image : url("/semillas.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        padding: 100px;

       
       }

        .field, h2, .actions{

          text-align: center;
          margin-bottom: 30px;
          color: #e8d9d9;

        }

       .col-md-offset-3{

         border-radius: 20px;
         border: solid rgba(0, 0, 0, 0.33) 1px !important;
         background: rgba(0, 0, 0, 0.50) !important;
        box-shadow: 4px 4px 10px #e8d9d9;
         padding: 2px !important;
       }

    </style>
    
    
    
    <body>
      
    



<div class="row">
  <div class="col-md-6 col-md-offset-3">
    

<h2>Login</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, style: "color: black !important; border-radius: 10px !important; text-align: center !important"%>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", style: "color: black !important; border-radius: 10px !important; text-align: center !important" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" , style: "color: black !important; background: #e8d9d9; color: black !important; border-radius: 10px !important;", class:"btn"%>
      </div>
    <% end %>

  </div>
   

     


</div>





    

     

</body>


</html>